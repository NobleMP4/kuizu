# Désactiver la signature du serveur
<IfModule mod_security.c>
    SecServerSignature Off
</IfModule>

# Configuration pour le développement (commenter en production)
<IfModule mod_php.c>
    # Affichage des erreurs (désactiver en production)
    php_flag display_errors Off
    php_flag display_startup_errors Off
    php_flag log_errors On
    
    # Niveau de rapport d'erreurs
    php_value error_reporting "E_ALL & ~E_NOTICE & ~E_DEPRECATED & ~E_STRICT"
    
    # Configuration des sessions
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 0
    php_value session.use_strict_mode 1
    php_value session.cookie_samesite "Lax"
</IfModule>
